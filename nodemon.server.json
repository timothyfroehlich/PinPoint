{
  "exec": "npm run dev",
  "watch": [
    "src/server",
    "prisma/schema.prisma",
    ".env",
    "next.config.js",
    "middleware.ts"
  ],
  "ignore": [
    "src/app/**/*",
    "*.test.*",
    "**/__tests__/**",
    "node_modules",
    ".next",
    ".turbo",
    "coverage"
  ],
  "ext": "js,ts,json,prisma",
  "delay": 2000,
  "events": {
    "restart": "echo 'ğŸ”„ Server restarting due to file changes...' && node scripts/pre-restart.cjs",
    "start": "echo 'âœ… Development server started successfully'",
    "crash": "echo 'âŒ Server crashed, will restart automatically'"
  },
  "env": {
    "NODE_ENV": "development"
  },
  "verbose": false,
  "restartable": "rs"
}
