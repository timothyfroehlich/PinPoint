{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/quality-check.cjs",
            "timeout": 30000
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/pattern-reminder.cjs",
            "timeout": 2000
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(npm run dev:*)",
      "Bash(npm run e2e:*)",
      "Bash(npm run e2e:smoke:*)",
      "Bash(npm run e2e:snapshot:create:*)",
      "Bash(npm run e2e:snapshot:restore:*)",
      "Bash(npm run preview:*)",
      "Bash(npm run validate:*)",
      "Bash(npm run format:*)",
      "Bash(npm run format:write:*)",
      "Bash(npm run format:fix:*)",
      "Bash(npm run security:check:commit:*)",
      "Bash(npm run security:check:push:*)",
      "Bash(npm run preflight:*)",
      "Bash(npm run test:integration:*)",
      "Bash(npm run test:*)",
      "Bash(npm run db:push:*)",
      "Bash(npm run db:seed:*)",
      "Bash(npm run db:seed-users:*)",
      "Bash(PLAYWRIGHT_PORT=3001 npm run smoke)",
      "Bash(supabase status:*)",
      "Bash(supabase start:*)",
      "Bash(supabase --version:*)",
      "Bash(supabase db reset:*)",
      "Bash(./scripts/check-security-deps.sh:*)",
      "Bash(./scripts/check-file-security.sh:*)",
      "Bash(./scripts/check-db-schema.sh:*)",
      "Bash(./scripts/check-npm-audit.sh:*)"
    ]
  }
}
