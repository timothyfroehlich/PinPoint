{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    /* Configuration files - relaxed standards for build/config tools */
    "strict": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    /* Allow flexibility for build tools and config files */
    "exactOptionalPropertyTypes": false,
    "noUncheckedIndexedAccess": false,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": [
    "*.config.{ts,js}",
    "vitest.setup.*.ts",
    "scripts/**/*.{ts,js}",
    "scripts/seed/*.ts",
    ".betterer.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "coverage/**/*"]
}
