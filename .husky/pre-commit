#!/bin/sh
# Prevent commits to main branch
branch=$(git rev-parse --abbrev-ref HEAD)
if [ "$branch" = "main" ]; then
  echo "ğŸš¨ BLOCKED: Direct commits to main are not allowed!"
  echo "ğŸ’¡ Use a feature branch and create a PR, or use /ship-it for meta changes"
  echo "ğŸ”§ Create a branch: git checkout -b feature/your-changes"
  exit 1
fi

echo "ğŸ”§ Running pre-commit checks in parallel..."
npm run pre-commit:all
