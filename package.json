{
  "name": "pinpoint",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "_comment_build": "========== Build & Production ==========",
    "build": "next build",
    "start": "next start",
    "preview": "next build && next start",
    "prepare": "husky",
    "_comment_dev": "========== Development ==========",
    "env:pull": "vercel env pull .env.local",
    "dev": "next dev --turbo",
    "dev:full": "concurrently -n 'dev,typecheck' -c 'blue,yellow' --kill-others 'npm run dev' 'npm run dev:typecheck'",
    "dev:db:studio": "npm run db:studio",
    "dev:typecheck": "tsc --noEmit --watch --preserveWatchOutput",
    "_comment_database": "========== Database Reset ==========",
    "db:reset": "./scripts/db-reset.sh local",
    "db:reset:local": "./scripts/db-reset.sh local",
    "db:reset:preview": "./scripts/db-reset.sh preview",
    "db:reset:postgresql": "echo 'PostgreSQL-only reset (for CI)' && npm run db:push:local && psql -f supabase/seeds/base/01-rls-policies.sql && psql -f supabase/seeds/base/02-permissions.sql",
    "_comment_supabase": "========== Supabase Infrastructure ==========",
    "sb:reset": "npm run sb:stop:nuclear && supabase start && npm run db:reset",
    "sb:stop:nuclear": "supabase stop && npm run sb:volumes:clean",
    "sb:volumes:clean": "docker volume ls --filter label=com.supabase.cli.project --format '{{.Name}}' | xargs -r docker volume rm",
    "sb:volumes:list": "docker volume ls --filter label=com.supabase.cli.project",
    "_comment_database_dev": "========== Database Development ==========",
    "db:generate:local:sb": "drizzle-kit generate --config=drizzle.config.dev.ts",
    "db:generate:preview": "drizzle-kit generate --config=drizzle.config.prod.ts",
    "db:push:local": "drizzle-kit push --config=drizzle.config.dev.ts",
    "db:push:preview": "drizzle-kit push --config=drizzle.config.prod.ts",
    "db:studio": "drizzle-kit studio --config=drizzle.config.dev.ts",
    "db:studio:preview": "drizzle-kit studio --config=drizzle.config.prod.ts",
    "db:generate-types": "supabase gen types typescript --local > src/types/supabase.ts",
    "db:generate-types:preview": "supabase gen types typescript --db-url $DATABASE_URL > src/types/supabase.ts",
    "generate:sql-constants": "tsx scripts/generate-sql-constants.ts",
    "_comment_validation": "========== Database Validation ==========",
    "db:validate": "tsx scripts/validate-drizzle-crud.ts",
    "db:validate:minimal": "cross-env DB_VALIDATE_MINIMAL=true tsx scripts/validate-drizzle-crud.ts",
    "db:validate:ci": "tsx scripts/validate-drizzle-crud.ts",
    "db:validate:pre-commit": "echo 'ðŸ’¡ Database validation now runs automatically on schema changes'",
    "pre-commit:gitleaks": "gitleaks protect --staged --verbose",
    "pre-commit:lint-staged": "npx lint-staged",
    "pre-commit:shellcheck": "./scripts/pre-commit-shellcheck.sh",
    "pre-commit:db-check": "node -e \"const { execSync } = require('child_process'); const files = execSync('git diff --cached --name-only', {encoding: 'utf8'}); if (files.match(/(schema|drizzle)/)) { console.log('ðŸ“Š Schema files detected, running database validation...'); execSync('npm run db:validate:minimal', {stdio: 'inherit'}); } else { console.log('ðŸ“Š No schema files changed, skipping database validation'); }\"",
    "pre-commit:all": "npm-run-all --parallel pre-commit:lint-staged",
    "_comment_core": "========== Core Commands ==========",
    "typecheck": "tsc --noEmit && tsc --project tsconfig.config.json --noEmit",
    "typecheck:brief": "tsc --noEmit --pretty false && tsc --project tsconfig.config.json --noEmit --pretty false",
    "typecheck:verbose": "tsc --noEmit --listFiles && tsc --project tsconfig.config.json --noEmit --listFiles",
    "format": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "format:brief": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache --log-level warn",
    "format:verbose": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache --log-level debug",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "lint": "npm-run-all --parallel lint:eslint lint:sql",
    "lint:eslint": "eslint . --max-warnings 220",
    "lint:sql": "supabase db lint",
    "lint:brief": "npm-run-all --parallel lint:eslint:brief lint:sql",
    "lint:eslint:brief": "eslint . --max-warnings 220 --quiet",
    "lint:verbose": "npm-run-all --parallel lint:eslint:verbose lint:sql",
    "lint:eslint:verbose": "eslint . --max-warnings 0 --format=stylish",
    "lint:fix": "eslint . --fix",
    "lint:sarif": "NODE_ENV=development next lint --format @microsoft/eslint-formatter-sarif --output-file eslint-results.sarif",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:rls": "cd supabase/tests && ./run-tests.sh",
    "test:all": "npm-run-all --print-label --parallel test test:rls smoke",
    "test:ci": "npm-run-all --sequential test test:rls smoke",
    "smoke": "playwright test e2e/smoke-test-workflow.spec.ts --project=chromium --reporter=line",
    "audit": "npm audit --audit-level=high",
    "audit:brief": "npm audit --audit-level=high",
    "audit:verbose": "npm audit --audit-level=moderate",
    "_comment_status": "========== Status Commands ==========",
    "status:overview": "node scripts/status-overview.cjs",
    "status:pr": "./scripts/status-pr.sh",
    "status:ci": "./scripts/status-ci.sh",
    "_comment_meta": "========== Meta Commands ==========",
    "check": "npm-run-all --parallel --print-label typecheck lint format audit",
    "check:fix": "npm-run-all --sequential fix check",
    "check:brief": "npm-run-all --parallel --silent typecheck:brief lint:brief format:brief audit:brief",
    "check:verbose": "npm-run-all --parallel --print-label typecheck:verbose lint:verbose format:verbose audit:verbose",
    "fix": "npm-run-all --sequential lint:fix format:write",
    "validate": "npm-run-all --parallel --print-label typecheck:brief lint:brief format:brief audit:brief test:all db:validate:minimal",
    "validate-file": "node scripts/validate-single-file.cjs",
    "check-file": "node scripts/validate-single-file.cjs --no-tests",
    "pre-commit": "npm-run-all --print-label fix typecheck lint format test:ci workflow:ci deps:ci smoke:ci",
    "workflow:ci": "node scripts/agent-workflow.cjs",
    "deps:ci": "node scripts/agent-deps.cjs",
    "smoke:ci": "node scripts/agent-smoke.cjs",
    "_comment_debug": "========== Debug & Utilities ==========",
    "workflow:lint": "actionlint .github/workflows/*.yml",
    "_comment_maintenance": "========== Maintenance ==========",
    "clean": "rm -rf .next node_modules/.cache .turbo && npm install",
    "deps:check": "npm audit --audit-level=high",
    "deps:fix": "npm audit fix",
    "deps:update": "npm update && npm audit",
    "_comment_external": "========== External API ==========",
    "pinballmap:update-fixture": "curl -o src/lib/pinballmap/__tests__/fixtures/api_responses/locations/location_26454_machine_details.json https://pinballmap.com/api/v1/locations/26454/machine_details.json"
  },
