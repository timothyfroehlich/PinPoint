{
  "name": "pinpoint",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "_comment_build": "========== Build & Production ==========",
    "build": "prisma generate && next build",
    "start": "next start",
    "preview": "next build && next start",
    "postinstall": "prisma generate",
    "prepare": "husky",
    "_comment_dev": "========== Development ==========",
    "dev": "dotenv -- next dev --turbo",
    "dev:full": "concurrently -n 'server,typecheck' -c 'blue,yellow' --kill-others 'npm run dev:server' 'npm run dev:typecheck'",
    "dev:clean": "node scripts/cleanup-dev.cjs && npm run dev:full",
    "dev:server": "dotenv -e .env -e .env.development -- nodemon --config nodemon.server.json",
    "dev:db:studio": "dotenv -- sh -c 'prisma studio --port ${PRISMA_STUDIO_PORT:-5555}'",
    "dev:typecheck": "tsc --noEmit --watch --preserveWatchOutput",
    "dev:bg": "./scripts/dev-background.sh start",
    "dev:bg:stop": "./scripts/dev-background.sh stop",
    "dev:bg:status": "./scripts/dev-background.sh status",
    "dev:bg:logs": "./scripts/dev-background.sh logs",
    "dev:killall": "./scripts/kill-dev-processes.cjs",
    "_comment_database": "========== Database ==========",
    "db:generate": "dotenv -e .env -e .env.development -- prisma migrate dev",
    "db:migrate": "dotenv -e .env -e .env.development -- prisma migrate deploy",
    "db:push": "dotenv -e .env -e .env.development -- prisma db push",
    "db:studio": "echo '‚ö†Ô∏è  Consider using direct SQL queries instead (see CLAUDE.md)' && dotenv -e .env -e .env.development -- prisma studio",
    "db:reset": "dotenv -e .env -e .env.development -- sh -c 'rm -rf prisma/migrations && npx prisma db push --force-reset && npm run seed'",
    "seed": "dotenv -e .env -e .env.development -- tsx prisma/seed.ts",
    "db:validate": "dotenv -e .env -e .env.development -- tsx scripts/validate-drizzle-crud.ts",
    "db:validate:minimal": "dotenv -e .env -e .env.development -- cross-env DB_VALIDATE_MINIMAL=true tsx scripts/validate-drizzle-crud.ts",
    "db:validate:ci": "tsx scripts/validate-drizzle-crud.ts",
    "db:validate:pre-commit": "echo 'üí° Database validation now runs automatically on schema changes'",
    "pre-commit:gitleaks": "gitleaks protect --staged --verbose",
    "pre-commit:lint-staged": "npx lint-staged",
    "pre-commit:db-check": "node -e \"const { execSync } = require('child_process'); const files = execSync('git diff --cached --name-only', {encoding: 'utf8'}); if (files.match(/(schema|drizzle|prisma)/)) { console.log('üìä Schema files detected, running database validation...'); execSync('npm run db:validate:minimal', {stdio: 'inherit'}); } else { console.log('üìä No schema files changed, skipping database validation'); }\"",
    "pre-commit:all": "npm-run-all --parallel pre-commit:gitleaks pre-commit:lint-staged pre-commit:db-check",
    "_comment_core": "========== Core Commands ==========",
    "typecheck": "tsc --noEmit && tsc --project tsconfig.config.json --noEmit",
    "typecheck:brief": "tsc --noEmit --pretty false && tsc --project tsconfig.config.json --noEmit --pretty false",
    "typecheck:verbose": "tsc --noEmit --listFiles && tsc --project tsconfig.config.json --noEmit --listFiles",
    "format": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "format:brief": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache --log-level warn",
    "format:verbose": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache --log-level debug",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "lint": "dotenv -e .env -e .env.development -- sh -c 'NODE_ENV=development next lint'",
    "lint:brief": "dotenv -e .env -e .env.development -- sh -c 'NODE_ENV=development next lint --quiet'",
    "lint:verbose": "dotenv -e .env -e .env.development -- sh -c 'NODE_ENV=development next lint --format detailed'",
    "lint:fix": "dotenv -e .env -e .env.development -- sh -c 'NODE_ENV=development next lint --fix'",
    "test": "vitest run",
    "test:brief": "vitest run --reporter=dot",
    "test:quiet": "vitest run --reporter=dot --silent",
    "test:verbose": "vitest run --reporter=verbose",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:brief:fast": "vitest run --reporter=dot --bail=5",
    "test:brief:changed": "vitest run --reporter=dot --changed",
    "test:brief:node": "vitest run --reporter=dot --project=node",
    "test:brief:jsdom": "vitest run --reporter=dot --project=jsdom",
    "test:brief:nocov": "vitest run --reporter=dot --coverage=false",
    "test:brief:watch": "vitest watch --reporter=dot",
    "playwright": "playwright test --headed=false",
    "playwright:brief": "playwright test --headed=false --reporter=line",
    "playwright:verbose": "playwright test --headed=false --reporter=list",
    "playwright:ui": "playwright test --ui",
    "playwright:headed": "playwright test --headed",
    "smoke": "playwright test e2e/smoke-test-workflow.spec.ts --project=chromium --reporter=line",
    "audit": "npm audit --audit-level=high",
    "audit:brief": "npm audit --audit-level=high --format table",
    "audit:verbose": "npm audit --audit-level=moderate",
    "_comment_meta": "========== Meta Commands ==========",
    "check": "npm-run-all --parallel --print-label typecheck lint format audit",
    "check:fix": "npm-run-all --sequential fix check",
    "check:brief": "npm-run-all --parallel --silent typecheck:brief lint:brief format:brief audit:brief",
    "check:verbose": "npm-run-all --parallel --print-label typecheck:verbose lint:verbose format:verbose audit:verbose",
    "fix": "npm-run-all --sequential lint:fix format:write",
    "validate": "npm-run-all --parallel --print-label typecheck lint format audit test",
    "pre-commit": "npm-run-all --print-label fix typecheck lint format test workflow:ci deps:ci smoke:ci",
    "workflow:ci": "node scripts/agent-workflow.cjs",
    "deps:ci": "node scripts/agent-deps.cjs",
    "smoke:ci": "node scripts/agent-smoke.cjs",
    "_comment_debug": "========== Debug & Utilities ==========",
    "health": "node scripts/health-check.cjs",
    "workflow:lint": "actionlint .github/workflows/*.yml",
    "_comment_maintenance": "========== Maintenance ==========",
    "clean": "rm -rf .next node_modules/.cache .turbo && npm install",
    "reset": "npm run clean && npm run db:push && npm run seed",
    "setup:worktree": "bash scripts/setup-worktree.sh",
    "kill:all": "node scripts/kill-dev-processes.cjs",
    "deps:check": "npm audit --audit-level=high",
    "deps:fix": "npm audit fix",
    "deps:update": "npm update && npm audit",
    "_comment_external": "========== External API ==========",
    "pinballmap:update-fixture": "curl -o src/lib/pinballmap/__tests__/fixtures/api_responses/locations/location_26454_machine_details.json https://pinballmap.com/api/v1/locations/26454/machine_details.json"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@emotion/cache": "^11.14.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "7.2.0",
    "@mui/lab": "^7.0.0-beta.14",
    "@mui/material": "7.2.0",
    "@mui/material-nextjs": "^7.2.0",
    "@prisma/client": "^6.13.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.53.0",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tanstack/react-query": "^5.83.0",
    "@trpc/client": "^11.0.0",
    "@trpc/react-query": "^11.0.0",
    "@trpc/server": "^11.0.0",
    "csv-parser": "^3.2.0",
    "drizzle-orm": "^0.44.4",
    "next": "15.4.2",
    "pino": "^9.7.0",
    "pino-pretty": "^13.1.1",
    "postgres": "^3.4.7",
    "qrcode": "^1.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "server-only": "^0.0.1",
    "superjson": "^2.2.1",
    "uuid": "^11.1.0",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "^1.54.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@tsconfig/recommended": "^1.0.10",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^24.0.15",
    "@types/pg": "^8.15.5",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "actionlint": "^2.0.6",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "cross-fetch": "^4.1.0",
    "dotenv-cli": "^9.0.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.31.0",
    "eslint-config-next": "^15.4.2",
    "eslint-formatter-compact": "^8.40.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "msw": "^2.10.4",
    "msw-trpc": "^2.0.1",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prisma": "^6.13.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.37.0",
    "vite": "^7.0.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vitest-mock-extended": "^3.1.0"
  },
  "ct3aMetadata": {
    "initVersion": "7.39.3"
  },
  "packageManager": "npm@11.3.0",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx}": [
      "prettier --write"
    ]
  }
}
