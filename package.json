{
  "name": "pinpoint",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "_comment_primary": "========== Primary Commands ==========",
    "dev": "next dev --turbo",
    "build": "next build",
    "validate": "npm-run-all --parallel lint format typecheck audit security:check --sequential test",
    "typecheck": "tsc --noEmit --pretty false && tsc --project tsconfig.config.json --noEmit --pretty false",
    "lint": "eslint . --max-warnings 220 --quiet",
    "format": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --ignore-path .prettierignore --cache --log-level warn",
    "audit": "npm audit --audit-level=high",
    "test": "vitest run --reporter=dot",
    "test:rls": "cd supabase/tests && ./run-tests.sh",
    "e2e": "cross-env PLAYWRIGHT_REUSE=1 PLAYWRIGHT_PORT=49210 BASE_URL=http://localhost:49210 npm-run-all --sequential e2e:guest e2e:smoke",
    "e2e:guest": "cross-env PLAYWRIGHT_REUSE=1 PLAYWRIGHT_PORT=49210 BASE_URL=http://localhost:49210 playwright test --grep-invert @prod --project=chromium",
    "e2e:smoke": "cross-env PLAYWRIGHT_REUSE=1 PLAYWRIGHT_PORT=49210 BASE_URL=http://localhost:49210 playwright test --grep-invert @prod --project=auth-setup --project=chromium-auth",
    "e2e:prod": "playwright test e2e/prod/",
    "test:all": "npm-run-all --parallel test test:rls e2e",
    "fix": "npm-run-all --sequential lint:fix format:write",
    "_comment_secondary": "========== Secondary Commands ==========",
    "start": "next start",
    "preview": "next build && next start",
    "prepare": "husky",
    "env:pull": "vercel env pull .env.local",
    "dev:full": "concurrently -n 'dev,typecheck' -c 'blue,yellow' --kill-others 'npm run dev' 'npm run dev:typecheck'",
    "dev:db:studio": "npm run db:studio",
    "dev:typecheck": "tsc --noEmit --watch --preserveWatchOutput",
    "lint:fix": "eslint . --fix",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --ignore-path .prettierignore --cache",
    "test:watch": "vitest watch",
    "_comment_database": "========== Database Reset ==========",
    "db:reset": "./scripts/db-reset.sh local",
    "db:reset:local": "./scripts/db-reset.sh local",
    "db:reset:preview": "./scripts/db-reset.sh preview && ./scripts/trigger-preview-seeding.sh --wait",
    "db:reset:postgresql": "echo 'PostgreSQL-only reset (for CI)' && npm run db:push:local && psql -f supabase/seeds/base/01-rls-policies.sql && psql -f supabase/seeds/base/02-permissions.sql",
    "_comment_supabase": "========== Supabase Infrastructure ==========",
    "sb:reset": "npm run sb:stop:nuclear && supabase start && npm run db:reset",
    "sb:stop:nuclear": "supabase stop && npm run sb:volumes:clean",
    "sb:volumes:clean": "docker volume ls --filter label=com.supabase.cli.project --format '{{.Name}}' | xargs -r docker volume rm",
    "sb:volumes:list": "docker volume ls --filter label=com.supabase.cli.project",
    "_comment_database_dev": "========== Database Development ==========",
    "db:generate:local:sb": "drizzle-kit generate --config=drizzle.config.dev.ts",
    "db:generate:preview": "drizzle-kit generate --config=drizzle.config.prod.ts",
    "db:push:local": "drizzle-kit push --config=drizzle.config.dev.ts",
    "db:push:preview": "drizzle-kit push --config=drizzle.config.prod.ts",
    "db:studio": "drizzle-kit studio --config=drizzle.config.dev.ts",
    "db:studio:preview": "drizzle-kit studio --config=drizzle.config.prod.ts",
    "db:generate-types": "supabase gen types typescript --local > src/lib/types/database.ts",
    "db:generate-types:preview": "supabase gen types typescript --db-url $DATABASE_URL > src/lib/types/database.ts",
    "db:seed:local:sb": "./scripts/db-reset.sh local --only-seed",
    "generate:sql-constants": "tsx scripts/generate-sql-constants.ts",
    "preview:seed": "./scripts/trigger-preview-seeding.sh",
    "preview:seed:wait": "./scripts/trigger-preview-seeding.sh --wait",
    "_comment_validation": "========== Database Validation ==========",
    "db:validate": "tsx ./scripts/validate-drizzle-crud.ts",
    "db:validate:minimal": "cross-env DB_VALIDATE_MINIMAL=true tsx ./scripts/validate-drizzle-crud.ts",
    "db:validate:ci": "tsx ./scripts/validate-drizzle-crud.ts",
    "db:validate:pre-commit": "echo 'ðŸ’¡ Database validation now runs automatically on schema changes'",
    "validate:consistency": "tsx ./scripts/validate-schema-consistency.ts",
    "_comment_security": "========== Security Commands ==========",
    "security:check": "npm-run-all --parallel security:deps security:files security:auth security:audit",
    "security:check:commit": "npm-run-all --parallel security:deps security:secrets:staged security:files security:auth security:audit",
    "security:check:push": "npm-run-all --parallel security:deps security:files security:auth security:audit",
    "security:deps": "./scripts/check-security-deps.sh",
    "security:secrets:staged": "gitleaks protect --staged --verbose && git diff --cached --name-only --diff-filter=ACM | xargs --no-run-if-empty trufflehog filesystem --fail --no-verification",
    "security:files": "./scripts/check-file-security.sh",
    "security:auth": "node scripts/check-auth-safety.cjs",
    "security:audit": "./scripts/check-npm-audit.sh",
    "_comment_testing": "========== Testing Commands ==========",
    "e2e:snapshot:create": "./scripts/e2e-snapshot-create.sh",
    "e2e:snapshot:restore": "./scripts/e2e-snapshot-restore.sh",
    "test:e2e:prod": "playwright test -c playwright.prod.config.ts --reporter=line",
    "lint:sarif": "eslint . --format @microsoft/eslint-formatter-sarif --output-file eslint-results.sarif --max-warnings 220",
    "_comment_status": "========== Status Commands ==========",
    "status:overview": "node scripts/status-overview.cjs",
    "status:pr": "./scripts/status-pr.sh",
    "status:ci": "./scripts/status-ci.sh",
    "_comment_utils": "========== Utility Commands ==========",
    "validate-file": "node scripts/validate-single-file.cjs",
    "check-file": "node scripts/validate-single-file.cjs --no-tests",
    "workflow:ci": "node scripts/agent-workflow.cjs",
    "deps:ci": "node scripts/agent-deps.cjs",
    "smoke:ci": "node scripts/agent-smoke.cjs",
    "_comment_debug": "========== Debug & Utilities ==========",
    "workflow:lint": "actionlint .github/workflows/*.yml",
    "_comment_maintenance": "========== Maintenance ==========",
    "clean": "rm -rf .next node_modules/.cache .turbo && npm install",
    "deps:check": "npm audit --audit-level=high",
    "deps:fix": "npm audit fix",
    "deps:update": "npm update && npm audit",
    "_comment_external": "========== External API ==========",
    "pinballmap:update-fixture": "curl -o src/lib/pinballmap/__tests__/fixtures/api_responses/locations/location_26454_machine_details.json https://pinballmap.com/api/v1/locations/26454/machine_details.json"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.14",
    "@material/material-color-utilities": "^0.3.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.80.0",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tabler/icons-react": "^3.35.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@tanstack/react-query": "^5.90.7",
    "@trpc/client": "^11.7.1",
    "@trpc/react-query": "^11.7.1",
    "@trpc/server": "^11.7.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.7",
    "lucide-react": "^0.553.0",
    "next": "16.0.1",
    "next-themes": "^0.4.6",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "postgres": "^3.4.7",
    "qrcode": "^1.5.4",
    "react": "19.2.0",
    "react-day-picker": "^9.11.1",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.66.0",
    "server-only": "^0.0.1",
    "sonner": "^2.0.7",
    "superjson": "^2.2.5",
    "tailwind-merge": "^3.3.1",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "@microsoft/eslint-plugin-sdl": "^1.1.0",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@tsconfig/strictest": "^2.0.7",
    "@types/node": "^24.10.0",
    "@types/pg": "^8.15.6",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/rule-tester": "^8.46.3",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/eslint-plugin": "^1.4.1",
    "actionlint": "^2.0.6",
    "autoprefixer": "^10.4.21",
    "babel-plugin-react-compiler": "^1.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.6",
    "eslint": "^9.39.1",
    "eslint-config-next": "16.0.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "supabase": "^2.58.3",
    "tailwindcss": "^4.1.17",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.2.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.8",
    "vitest-mock-extended": "^3.1.0"
  },
  "overrides": {
    "esbuild": "^0.25.8"
  },
  "ct3aMetadata": {
    "initVersion": "7.39.3"
  },
  "packageManager": "npm@11.6.2",
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,mdx}": [
      "prettier --write"
    ]
  }
}
