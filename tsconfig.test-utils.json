{
  "extends": ["./tsconfig.base.json", "@tsconfig/recommended/tsconfig.json"],
  "compilerOptions": {
    /* Moderate strictness for reusable test utilities */
    "strict": true,
    "strictNullChecks": true,
    /* Allow some flexibility for test utility patterns */
    "exactOptionalPropertyTypes": false,
    "noUncheckedIndexedAccess": false,
    /* Override @tsconfig/recommended to maintain Next.js compatibility */
    "module": "ESNext",
    "moduleResolution": "Bundler"
  },
  "include": ["src/test/**/*.ts", "src/test/**/*.tsx"]
}
