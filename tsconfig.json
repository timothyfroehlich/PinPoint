{
  "extends": ["./tsconfig.base.json", "@tsconfig/strictest/tsconfig.json"],
  "compilerOptions": {
    /* Strictness - inherited from @tsconfig/strictest */
    /* Explicitly enable key options for ESLint type-aware rules */
    "strict": true,
    "strictNullChecks": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    /* Ensure path aliases work for middleware */
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    ".next/types/**/*.ts",
    "middleware.ts",
    "prisma/**/*.ts"
  ],
  "exclude": [
    "src/_archived_frontend/**/*",
    "src/test/**/*",
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "src/**/__tests__/**/*",
    "src/integration-tests/**/*",
    "*.config.js",
    "*.config.ts",
    "eslint.config.js",
    "prettier.config.js",
    "tooling.config.*",
    "playwright.config.ts",
    "vitest.config.ts",
    "vite.config.ts",
    "scripts/**/*"
  ]
}
