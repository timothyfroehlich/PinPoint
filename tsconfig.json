{
  "extends": ["./tsconfig.base.json", "@tsconfig/strictest/tsconfig.json"],
  "compilerOptions": {
    // Additional settings beyond @tsconfig/strictest
    "noEmit": true, // We only use tsc for type checking, not emitting
    "strictNullChecks": true, // Explicit for emphasis (part of "strict")
    "forceConsistentCasingInFileNames": true // Cross-platform safety
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/**/*",
    "middleware.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    ".archived_v1",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "src/test/**/*",
    "e2e/**/*",
    "playwright.config.ts",
    "vitest.config.ts",
    "drizzle.config.ts",
    "postcss.config.mjs"
  ]
}
